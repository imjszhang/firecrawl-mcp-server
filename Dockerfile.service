FROM node:22-slim

WORKDIR /app

COPY package.json package-lock.json* ./

# 安装依赖
RUN npm ci

COPY tsconfig.json ./
COPY src ./src

# 直接运行tsc命令进行构建，然后手动添加执行权限
RUN npx tsc && chmod +x dist/index.js

ENV CLOUD_SERVICE=true
ENV PORT=3000

# Expose the port
EXPOSE 3000

# Run the server
CMD ["node", "dist/index.js"]